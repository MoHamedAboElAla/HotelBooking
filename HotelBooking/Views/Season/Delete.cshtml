@model HotelBooking.Domain.Models.Season

@{
    ViewData["Title"] = "Delete Season";
}

<style>
    :root {
        --danger-gradient: linear-gradient(135deg, #ff6b6b 0%, #fa5252 100%);
        --gray-gradient: linear-gradient(135deg, #dee2e6 0%, #ced4da 100%);
        --card-shadow: 0 10px 25px rgba(0,0,0,0.1);
        --border-radius: 1rem;
    }

    .details-section {
        background: white;
        border-radius: var(--border-radius);
        box-shadow: var(--card-shadow);
        padding: 2rem;
        max-width: 700px;
        margin: 3rem auto;
    }

    .details-title {
        background: var(--danger-gradient);
        color: white;
        padding: 1.5rem;
        border-radius: var(--border-radius) var(--border-radius) 0 0;
        font-size: 1.75rem;
        font-weight: bold;
        text-align: center;
        box-shadow: inset 0 -3px 6px rgba(0,0,0,0.1);
    }

    .table-details {
        width: 100%;
        margin-top: 2rem;
        border-collapse: collapse;
    }

        .table-details th,
        .table-details td {
            padding: 1rem;
            border: 1px solid #dee2e6;
            text-align: center;
        }

    .details-actions {
        display: flex;
        justify-content: center;
        gap: 1rem;
        margin-top: 2rem;
    }

    .btn-delete {
        background: var(--danger-gradient);
        color: white;
        font-weight: bold;
        padding: 0.6rem 1.5rem;
        border-radius: 50px;
        border: none;
        transition: all 0.3s ease;
    }

        .btn-delete:hover {
            box-shadow: 0 4px 15px rgba(255, 107, 107, 0.3);
            transform: translateY(-2px);
            color: white;
        }

    .btn-cancel {
        background: var(--gray-gradient);
        color: #495057;
        border: none;
        padding: 0.6rem 1.5rem;
        border-radius: 50px;
        font-weight: bold;
        transition: all 0.3s ease;
    }

        .btn-cancel:hover {
            background: #ced4da;
            transform: translateY(-2px);
            color: #212529;
        }
</style>

<div class="details-section">
    <div class="details-title">Are you sure you want to delete this season?</div>

    <table class="table-details">
        <tr>
            <th>Name</th>
            <td>@Model.Name</td>
        </tr>
        <tr>
            <th>Start Date</th>
            <td>@Model.StartDate.ToShortDateString()</td>
        </tr>
        <tr>
            <th>End Date</th>
            <td>@Model.EndDate.ToShortDateString()</td>
        </tr>
        <tr>
            <th>Price Factor</th>
            <td>@Model.PriceFactor</td>
        </tr>
    </table>

    <form asp-action="Delete" method="post" class="details-actions">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn-delete">Delete</button>
        <a asp-action="Index" class="btn-cancel">Cancel</a>
    </form>
</div>