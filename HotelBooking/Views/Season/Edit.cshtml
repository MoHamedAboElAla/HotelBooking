@model HotelBooking.Domain.Models.Season

@{
    ViewData["Title"] = "Edit Season";
}

<style>
    :root {
        --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        --success-gradient: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        --danger-gradient: linear-gradient(135deg, #ff758c 0%, #ff7eb3 100%);
        --card-shadow: 0 10px 25px rgba(0,0,0,0.1);
        --hover-shadow: 0 15px 35px rgba(0,0,0,0.15);
        --border-radius: 1rem;
    }

    .form-section {
        background: white;
        border-radius: var(--border-radius);
        box-shadow: var(--card-shadow);
        padding: 2rem;
        max-width: 700px;
        margin: 3rem auto;
    }

    .form-title {
        background: var(--primary-gradient);
        color: white;
        padding: 1.5rem;
        border-radius: var(--border-radius) var(--border-radius) 0 0;
        text-align: center;
        font-size: 1.75rem;
        font-weight: bold;
        box-shadow: inset 0 -3px 6px rgba(0,0,0,0.1);
    }

    .form-group label {
        font-weight: 600;
    }

    .form-control {
        border-radius: 8px;
        padding: 0.75rem 1rem;
        margin-bottom: 0.75rem;
        box-shadow: none;
    }

    .form-actions {
        display: flex;
        justify-content: flex-end;
        gap: 1rem;
        margin-top: 1rem;
    }

    .btn-custom-submit {
        background: var(--success-gradient);
        color: white;
        font-weight: bold;
        padding: 0.6rem 1.5rem;
        border-radius: 50px;
        border: none;
        transition: all 0.3s ease;
    }

        .btn-custom-submit:hover {
            box-shadow: var(--hover-shadow);
            transform: translateY(-2px);
            color: white;
        }

    .btn-custom-cancel {
        background: #dee2e6;
        color: #495057;
        border: none;
        padding: 0.6rem 1.5rem;
        border-radius: 50px;
        font-weight: bold;
        transition: all 0.3s ease;
    }

        .btn-custom-cancel:hover {
            background: #ced4da;
            transform: translateY(-2px);
            color: #212529;
        }
</style>

<div class="form-section">
    <div class="form-title">Edit Season</div>
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="StartDate"></label>
            <input asp-for="StartDate" class="form-control" type="date" />
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="EndDate"></label>
            <input asp-for="EndDate" class="form-control" type="date" />
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="PriceFactor"></label>
            <input asp-for="PriceFactor" class="form-control" />
            <span asp-validation-for="PriceFactor" class="text-danger"></span>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn-custom-submit">Save Changes</button>
            <a asp-action="Index" class="btn-custom-cancel">Cancel</a>
        </div>
    </form>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>