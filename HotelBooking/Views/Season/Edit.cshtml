@model HotelBooking.Domain.Models.Season

@{
    ViewData["Title"] = "Edit Season";
}

<link rel="stylesheet" href="~/css/main.css" />

<div class="form-section">
    <div class="form-title">Edit Season</div>
        <br />
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="StartDate"></label>
            <input asp-for="StartDate" class="form-control" type="date" />
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="EndDate"></label>
            <input asp-for="EndDate" class="form-control" type="date" />
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="PriceFactor"></label>
            <input asp-for="PriceFactor" class="form-control" />
            <span asp-validation-for="PriceFactor" class="text-danger"></span>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn-custom-submit">Save Changes</button>
            <a asp-action="Index" class="btn-custom-cancel">Cancel</a>
        </div>
    </form>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>