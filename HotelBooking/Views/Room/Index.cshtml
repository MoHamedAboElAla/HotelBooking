@model IEnumerable<HotelBooking.Domain.Models.Room>
@{
    ViewData["Title"] = "Room List";
}


<link rel="stylesheet" href="css/style.css" />

<div class="page-hero">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h1 class="page-title">Room List</h1>
                <p class="page-subtitle">Manage Rooms</p>
            </div>
            <div class="col-lg-4 text-end">
                <a class="action-btn" asp-action="Create">
                    <i class="fas fa-plus"></i>
                    + Add New Room
                </a>
            </div>
        </div>
    </div>
</div>

<div class="d-none d-lg-block">
    <div class="enhanced-table-wrapper">
        <table class="table enhanced-table">
            <thead>
                <tr>
                    <th><i class="fas fa-tag me-2"></i>Room #</th>
                    <th><i class="fas fa-calendar-day me-2"></i>Type</th>
                    <th><i class="fas fa-calendar-check me-2"></i>Image</th>
                    <th><i class="fas fa-percentage me-2"></i>Price/Night</th>
                    <th><i class="fas fa-percentage me-2"></i>Hotel</th>
                    <th><i class="fas fa-percentage me-2"></i>Status</th>
                    <th><i class="fas fa-cogs me-2"></i>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var room in Model)

                {
                    <tr>
                        <td><strong>@room.RoomNumber</strong></td>
                        <td>@room.RoomType</td>
                       <td>

                           <img src="@room.ImageUrl" alt="Room Image" class="img-thumbnail" style="max-width: 100px; max-height: 100px;" />
                           

                       </td>
                        <td><span class="price-display">@room.PricePerNight</span></td>
                        <td>@room.Hotel?.Name</td>
                        <td>
                            @if (@room.IsAvailable)
                            {
                                <span class="badge bg-success">Available</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Not Available</span>
                            }
                        </td>
                        <td>
                            <div class="d-flex justify-content-center gap-2">
                                <a class="action-btn-sm btn-edit" asp-action="Edit" asp-route-id="@room.Id" title="Edit"><i class="fas fa-edit"></i></a>
                                <a class="action-btn-sm btn-delete" asp-action="Delete" asp-route-id="@room.Id" title="Delete"><i class="fas fa-trash-alt"></i></a>
                              
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script defer src="https://use.fontawesome.com/releases/v5.15.4/js/all.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
}
