@model HotelBooking.Domain.Models.Room
@{
    ViewData["Title"] = "Delete Room";
}

<h2>Delete Room</h2>

<div class="alert alert-danger">
    <strong>Are you sure you want to delete this room?</strong>
</div>

<dl class="row">
    <dt class="col-sm-3">Room Number</dt>
    <dd class="col-sm-9">@Model.RoomNumber</dd>

    <dt class="col-sm-3">Type</dt>
    <dd class="col-sm-9">@Model.RoomType</dd>

    <dt class="col-sm-3">Price</dt>
    <dd class="col-sm-9">@Model.PricePerNight</dd>
</dl>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>