@model Hotel
@{
    ViewData["Title"] = "Delete Hotel";
}

<div class="container mt-5">
    <div class="card border-danger shadow-sm">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">Delete Hotel</h4>
        </div>
        <div class="card-body">
            <h5 class="text-danger">Are you sure you want to delete this hotel?</h5>

            <div class="row mt-4">
                <div class="col-md-4 text-center">
                    <img src="@Url.Content("~/Uploads/hotels/" + Model.ImageUrl)" alt="Hotel Image" class="img-thumbnail shadow-sm" style="width: 100%; max-width: 200px;" />
                </div>
                <div class="col-md-8">
                    <p><strong>Name:</strong> @Model.Name</p>
                    <p><strong>Location:</strong> @Model.Location</p>
                    <p><strong>Country:</strong> @Model.Country</p>
                    <p><strong>Stars:</strong> @Model.Stars</p>
                </div>
            </div>

            <form asp-action="Delete" method="post" class="mt-4">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-end gap-2">
                    <button type="submit" class="btn btn-danger">Yes, Delete</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
