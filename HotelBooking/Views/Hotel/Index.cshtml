@model IEnumerable<Hotel>
@{
    ViewData["Title"] = "All Hotels";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary">All Hotels</h2>
        <a asp-action="Create" class="btn btn-success">+ Add New Hotel</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>Name</th>
                    <th>Location</th>
                    <th>Country</th>
                    <th>Stars</th>
                    <th>Image</th>
                    <th style="min-width: 180px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var hotel in Model)
                {
                    <tr>
                        <td>@hotel.Name</td>
                        <td>@hotel.Location</td>
                        <td>@hotel.Country</td>
                        <td>@hotel.Stars</td>
                        <td>
                            <img src="@Url.Content("~/Uploads/hotels/" + hotel.ImageUrl)" alt="Hotel Image" class="img-thumbnail" style="max-width: 100px;" />
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Details" asp-route-id="@hotel.Id" class="btn btn-outline-primary btn-sm">Details</a>
                                <a asp-action="Edit" asp-route-id="@hotel.Id" class="btn btn-outline-warning btn-sm">Edit</a>
                                <a asp-action="Delete" asp-route-id="@hotel.Id" class="btn btn-outline-danger btn-sm">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
