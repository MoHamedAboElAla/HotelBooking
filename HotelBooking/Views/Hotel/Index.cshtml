@model IEnumerable<Hotel>
@{
    ViewData["Title"] = "All Hotels";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
<link rel="stylesheet" href="css/style.css" />

<div class="page-hero">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h1 class="page-title">Hotels List</h1>
                <p class="page-subtitle">Manage Hotels</p>
            </div>
            <div class="col-lg-4 text-end">
                <a class="action-btn" asp-action="Create">
                    <i class="fas fa-plus"></i>
                    Add New Hotel
                </a>
            </div>
        </div>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover align-middle shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Location</th>
                <th>Country</th>
                <th>Stars</th>
                <th>Image</th>
                <th style="min-width: 180px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var hotel in Model)
            {
                <tr>
                    <td>@hotel.Name</td>
                    <td>@hotel.Location</td>
                    <td>@hotel.Country</td>
                    <td>@hotel.Stars</td>
                    <td>
                        <img src="@Url.Content("~/Uploads/hotels/" + hotel.ImageUrl)" alt="Hotel Image" class="img-thumbnail" style="max-width: 100px;" />
                    </td>
                    <td>
                        <div class="d-flex gap-2">
                            <a asp-action="Details" asp-route-id="@hotel.Id" class="btn btn-sm btn-primary">
                                <i class="bi bi-eye"></i> Details
                            </a>
                            <a asp-action="Edit" asp-route-id="@hotel.Id" class="btn btn-sm btn-warning text-white">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@hotel.Id" class="btn btn-sm btn-danger">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>

