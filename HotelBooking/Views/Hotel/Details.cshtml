@model HotelViewModel
@{
    ViewData["Title"] = "Hotel Details";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-info text-white">
            <h4 class="mb-0">Hotel Details</h4>
        </div>
        <div class="card-body">
            <div class="row">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <div class="col-md-4 text-center mb-3">
                        <img src="@Url.Content("~/Uploads/hotels/" + Model.ImageUrl)"
                             alt="Hotel Image"
                             class="img-fluid rounded shadow-sm"
                             style="max-height: 250px;" />
                    </div>
                }

                <div class="col-md-8">
                    <h5 class="text-primary">@Model.Name</h5>
                    <p><strong>Location:</strong> @Model.Location</p>
                    <p><strong>Country:</strong> @Model.Country</p>
                    <p><strong>Stars:</strong> @Model.Stars ⭐</p>
                    <p><strong>Description:</strong><br />@Model.Description</p>
                </div>
            </div>

            <div class="mt-4 d-flex justify-content-end">
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>
